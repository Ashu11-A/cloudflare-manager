{
  "compilerOptions":{
     "target":"ESNext",
     "lib":[
        "ESNext",
        "DOM"
     ],
     "module":"NodeNext",
     "rootDir":".",
     "moduleResolution":"NodeNext",
     "baseUrl":".",
     "paths":{
        "@/*":[
           "./src/*"
        ]
     },
     "resolveJsonModule":true,
     "outDir":"dist",
     "removeComments":true,
     "esModuleInterop":true,
     "forceConsistentCasingInFileNames":true,
     "strict":true,
     "noImplicitAny":true,
     "noUnusedLocals":true,
     "noUnusedParameters":true,
     "noImplicitReturns":true
  },
  "include":[
     "src",
     "test"
  ],
  "exclude":[
     "node_modules"
  ]
}