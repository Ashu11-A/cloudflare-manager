{
  "compilerOptions":{
     "target":"ESNext",
     "lib":[
        "ESNext",
        "DOM"
     ],
     "module":"NodeNext",
     "rootDir":"./src",
     "moduleResolution":"NodeNext",
     "baseUrl":".",
     "paths":{
        "@/*":[
           "./src/*"
        ]
     },
     "declaration": true,
     "resolveJsonModule": true,
     "outDir": "dist",
     "removeComments": false,
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "strict": true,
     "noImplicitAny": true,
     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "noImplicitReturns": true
  },
  "include":[
     "src",
     "test"
  ],
  "exclude":[
     "node_modules"
  ]
}